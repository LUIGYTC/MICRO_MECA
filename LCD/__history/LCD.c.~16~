#include <16F877a.h>
#device ADC=10
#use delay(crystal = 20000000)
#FUSES NOWDT, NOBROWNOUT, NOLVP
#include <lcd_d.c>

#use STANDARD_IO(B)

#define S PIN_B0
#define R PIN_B1

int8 bs=0;
int8 br=0;
int8 res=0;

void main()
{
   lcd_init();
   printf(lcd_putc,"\fValor: ");
   while (1)
   {
      if(input(S)==1 && bs==0)
      {
         res++;
         br=1;
         break;
      }
      if(input(R)==1 && br==0)
      {
         res--;
         br=1;
         break;
      }
       lcd_gotoxy(8,1);
      printf(lcd_putc,"%u", res);
   }
   
}
