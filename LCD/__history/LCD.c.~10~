#include <16F877a.h>
#device ADC=10
#use delay(crystal = 20000000)
#FUSES NOWDT, NOBROWNOUT, NOLVP
#include <lcd_d.c>

#use STANDARD_IO(B)

#define S PIN_B0
#define R PIN_B1

int8 bs=0;
int8 br=0;
int8 res=0;

void main()
{
   lcd_init();
   while (1)
   {
      if(input(S)==1 && bs==0)
      {
         res++;
         printf(lcd_putc, res);
         br=1;
      }
      if(input(R)==1 && br==0)
      {
         res--;
         printf(lcd_putc, res);
         br=1;
      }
      else
      {
         br=0;
         bs=0;
      }
   }
   
}
