#include <16F877a.h>

#device ADC = 10

#use delay(crystal = 20000000)

#FUSES NOWDT, NOBROWNOUT, NOLVP




//Directiva para utilizar puerto USART

#use rs232(BAUD=9600, XMIT = PIN_C6, RCV=PIN_C7)




#use STANDARD_IO(B)
#use STANDARD_IO(C)



#define BOTON PIN_C0

#define R PIN_B1

#define Y PIN_B2

#define G PIN_B3

int8 bandera=0;

void verde()
   {
      for(int8 i=0; i<4000;i++)
      {
         if(i<=4000)
         {
            if(input(BOTON)==1)
            {
               bandera=1;
            }
            break;
            output_high(G);
            delay_ms(1);
         }
         bandera=1;
      }
   }

void main()

{

   setup_uart(9600); //Configurar baudios

   // Inicializar pines
   input(BOTON);

   output_low(R);

   output_low(Y);

   output_low(G);
   
   switch (bandera)
   {
      case 0:
         verde();
         break;
      case 1:
         amarillo();
         break;
      case 2:
         rojo();
         break;
   }

}
